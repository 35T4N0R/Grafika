<Window x:Class="Grafika.MaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafika"
        mc:Ignorable="d"
        Title="MaskWindow" Height="450" Width="800">
    <Grid >
        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="Black" BorderThickness="0" Width="100" HorizontalAlignment="Left" Margin="10 10 20 10">
                <StackPanel Name="maskButtons" Orientation="Vertical">
                    <Button Name="SaveMaskButton" Click="SaveMaskButton_Click">Save Mask</Button>
                </StackPanel>
            </Border>
            <StackPanel Name="boxes" Orientation="Vertical">

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
